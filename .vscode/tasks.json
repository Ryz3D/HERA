{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build assembler",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-g",
                "assembler.c",
                "-o",
                "${workspaceFolder}\\assembler.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\assembler"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "cppbuild",
            "label": "build compiler",
            "command": "C:\\MinGW\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-Wall",
                "-g",
                "src/main.c",
                "-o",
                "${workspaceFolder}\\compiler.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\compiler"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "simulate test.ha",
            "type": "shell",
            "command": "assembler programs/assembly/test.ha && python simulator/simulator.py -d programs/assembly/test.ha",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
            },
            "problemMatcher": []
        },
        {
            "label": "simulate test.ha (fast)",
            "type": "shell",
            "command": "assembler programs/assembly/test.ha && python simulator/simulator.py -d -ns programs/assembly/test.ha",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
            },
            "problemMatcher": []
        },
        {
            "label": "compile and simulate test.c",
            "type": "shell",
            "command": "compiler programs/c/test.c && assembler programs/assembly/compiler_test.ha && python simulator/simulator.py -d programs/assembly/compiler_test.ha",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
            },
            "problemMatcher": []
        },
        {
            "label": "compile and simulate test.c (fast)",
            "type": "shell",
            "command": "compiler programs/c/test.c && assembler programs/assembly/compiler_test.ha && python simulator/simulator.py -d -ns programs/assembly/compiler_test.ha",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
            },
            "problemMatcher": []
        },
        {
            "label": "compile and simulate test.c (very fast)",
            "type": "shell",
            "command": "compiler programs/c/test.c && assembler programs/assembly/compiler_test.ha && python simulator/simulator.py -ns programs/assembly/compiler_test.ha",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
            },
            "problemMatcher": []
        }
    ]
}